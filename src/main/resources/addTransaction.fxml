<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.AddTransactionController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox xmlns:fx="http://javafx.com/fxml" spacing="10" >
        <Label text="Add Transaction" />
        <TextField fx:id="referenceField" promptText="Enter Reference" />
        <TextField fx:id="timestampField" promptText="Enter Timestamp" />
        <TextField fx:id="comptesField" promptText="Enter Comptes (comma-separated)" />
        <Button text="Submit" onAction="#handleSubmitTransaction" />
        <Button text="Cancel" onAction="#handleCancel" />
    </VBox>

</AnchorPane>
